<%- include('partials/header') %>

    <main class="d-flex align-items-center py-4 bg-body-tertiary" style="min-height: 100vh;">
        <div class="form-signin w-100 m-auto text-center">
            <form method="POST" class="ajax-form" action="/signup">
                <i class="bi bi-wallet2 text-primary" style="font-size: 3.5rem;"></i>
                <h1 class="h3 mb-3 fw-normal">Create your account</h1>

                <% if (error) { %>
                    <div class="alert alert-danger py-2 small" role="alert">
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        <%= error %>
                    </div>
                <% } %>

                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingName" name="name" required>
                    <label for="floatingName">Full name</label>
                </div>
                <div class="form-floating">
                    <input type="email" class="form-control" id="floatingInput" name="email" required>
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="floatingPassword" name="password" minlength="8" required>
                    <label for="floatingPassword">Password (min 8 chars)</label>
                </div>

                <button class="btn btn-primary w-100 py-2 mt-2" type="submit">Sign up</button>

                <p class="mt-3 mb-3 text-body-secondary">
                    Already have an account? <a href="/signin" class="text-decoration-none">Sign in</a>
                </p>
            </form>
        </div>
    </main>

<%- include('partials/footer') %>