<%- include('partials/header') %>
    <%- include('partials/sidebar', { activePage: 'accounts' }) %>

        <!-- main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
            <div class="page-header">
                <h2>Accounts</h2>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAccountModal">
                    <i class="bi bi-plus-lg me-1"></i>New Account
                </button>
            </div>

            <!-- display the any error info-->
            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>
                    <!-- display accounts info-->
                    <% if (success) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-1"></i>
                            <%= success %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <% } %>

                            <% if (accounts.length===0) { %>
                                <div class="empty-state">
                                    <i class="bi bi-bank" style="font-size: 3rem; color: #dee2e6;"></i>
                                    <h5 class="mt-3">No accounts yet</h5>
                                    <p class="text-muted">Create your first account to start tracking expenses.</p>
                                    <button class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#addAccountModal">
                                        <i class="bi bi-plus-lg me-1"></i>Create Account
                                    </button>
                                </div>
                                <% } else { %>
                                    <div class="row g-3">
                                        <% accounts.forEach(account=> { %>
                                            <div class="col-md-6 col-xl-4">
                                                <div class="card account-card h-100">
                                                    <div class="card-body">
                                                        <div
                                                            class="d-flex justify-content-between align-items-start mb-3">
                                                            <div>
                                                                <h5 class="card-title mb-1">
                                                                    <%= account.accountName %>
                                                                </h5>
                                                                <small class="text-muted">
                                                                    <% if (account.owner._id.toString()===user._id.toString()) { %>
                                                                            Owner
                                                                        <% } else { %>
                                                                            Shared by <%= account.owner.name %>
                                                                        <% } %>
                                                                </small>
                                                            </div>
                                                            <% if (account.owner._id.toString()===user._id.toString()) {%>
                                                                <div class="dropdown">
                                                                    <button class="btn btn-sm btn-light" type="button"
                                                                        data-bs-toggle="dropdown">
                                                                        <i class="bi bi-three-dots-vertical"></i>
                                                                    </button>
                                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                                        <li>
                                                                            <a class="dropdown-item" href="#"
                                                                                data-bs-toggle="modal"
                                                                                data-bs-target="#editAccountModal-<%= account._id %>">
                                                                                <i class="bi bi-pencil me-2"></i>Edit
                                                                            </a>
                                                                        </li>
                                                                        <li>
                                                                            <a class="dropdown-item" href="#"
                                                                                data-bs-toggle="modal"
                                                                                data-bs-target="#shareAccountModal-<%= account._id %>">
                                                                                <i
                                                                                    class="bi bi-person-plus me-2"></i>Share
                                                                            </a>
                                                                        </li>
                                                                        <li>
                                                                            <hr class="dropdown-divider">
                                                                        </li>
                                                                        <li>
                                                                            <a class="dropdown-item text-danger"
                                                                                href="#" data-bs-toggle="modal"
                                                                                data-bs-target="#deleteAccountModal-<%= account._id %>">
                                                                                <i class="bi bi-trash me-2"></i>Delete
                                                                            </a>
                                                                        </li>
                                                                    </ul>
                                                                </div>
                                                                <% } %>
                                                        </div>

                                                        <div class="row g-2 mb-3">
                                                            <div class="col-4 text-center">
                                                                <div class="small text-muted">Income</div>
                                                                <div class="fw-bold text-success small">
                                                                    ₹<%= account.income.toLocaleString('en-IN') %>
                                                                </div>
                                                            </div>
                                                            <div class="col-4 text-center">
                                                                <div class="small text-muted">Expense</div>
                                                                <div class="fw-bold text-danger small">
                                                                    ₹<%= account.expense.toLocaleString('en-IN') %>
                                                                </div>
                                                            </div>
                                                            <div class="col-4 text-center">
                                                                <div class="small text-muted">Balance</div>
                                                                <div
                                                                    class="fw-bold small <%= account.balance >= 0 ? 'text-success' : 'text-danger' %>">
                                                                    ₹<%= account.balance.toLocaleString('en-IN') %>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <small class="text-muted">
                                                                <%= account.transactionCount %> transactions
                                                            </small>
                                                            <a href="/transactions/<%= account._id %>"
                                                                class="btn btn-sm btn-outline-primary">
                                                                <i class="bi bi-arrow-right me-1"></i>View
                                                            </a>
                                                        </div>

                                                        <% if (account.owner._id.toString()===user.id.toString() && account.members && account.members.length> 0) { %>
                                                            <div class="mb-3">
                                                                <small class="text-muted">Shared with:</small>
                                                                <div class="d-flex flex-wrap gap-1 mt-1">
                                                                    <% account.members.forEach(u=> { %>
                                                                        <span
                                                                            class="badge bg-light text-dark border small">
                                                                            <%= u.name %>
                                                                        </span>
                                                                        <% }) %>
                                                                </div>
                                                            </div>
                                                            <% } %>

                                                    </div>
                                                </div>
                                            </div>

                                            <!-- edit account modal -->
                                            <% if (account.owner._id.toString()===user._id.toString()) { %>
                                                <div class="modal fade" id="editAccountModal-<%= account._id %>" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <form class="ajax-form" data-method="PUT" method="POST"
                                                                action="/accounts/<%= account._id %>">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Edit Account</h5>
                                                                    <button type="button" class="btn-close"
                                                                        data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="mb-3">
                                                                        <label for="editName-<%= account._id %>"
                                                                            class="form-label">Account Name</label>
                                                                        <input type="text" class="form-control"
                                                                            id="editName-<%= account._id %>" name="name"
                                                                            value="<%= account.accountName %>" required>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary"
                                                                        data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-primary">Save
                                                                        Changes</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- share account modal -->
                                                <div class="modal fade" id="shareAccountModal-<%= account._id %>" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <form method="POST" class="ajax-form"
                                                                action="/accounts/<%= account._id %>/share">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Share "<%= account.name %>"
                                                                    </h5>
                                                                    <button type="button" class="btn-close"
                                                                        data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="mb-3">
                                                                        <label for="shareEmail-<%= account._id %>"
                                                                            class="form-label">User's Email
                                                                            Address</label>
                                                                        <input type="email" class="form-control"
                                                                            id="shareEmail-<%= account._id %>"
                                                                            name="email" placeholder="user@example.com"
                                                                            required>
                                                                        <div class="form-text">The user must have an
                                                                            existing account on Expense Manager.</div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary"
                                                                        data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-primary"><i
                                                                            class="bi bi-person-plus me-1"></i>Share</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- delete account modal -->
                                                <div class="modal fade" id="deleteAccountModal-<%= account._id %>" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title text-danger">Delete Account</h5>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>Are you sure you want to delete <strong>"<%= account.accountName %>"</strong>?</p>
                                                                <p class="text-danger small">
                                                                    <b class="bi bi-exclamation-triangle me-1"></b>
                                                                    This will also delete all transactions in this account. This action cannot be undone.
                                                                </p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Cancel</button>
                                                                <form data-method="DELETE" method="POST" class="ajax-form" action="/accounts/<%= account._id %>">
                                                                    <button type="submit" class="btn btn-danger">
                                                                        <i class="bi bi-trash me-1"></i>
                                                                        Delete
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %>
                                        <% }) %>
                                    </div>
                                <% } %>
        </main>
    </div>
    </div>

    <!-- Add Account Modal -->
    <div class="modal fade" id="addAccountModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="POST" class="ajax-form" action="/accounts">
                    <div class="modal-header">
                        <h5 class="modal-title">Create New Account</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="accountName" class="form-label">Account Name</label>
                            <input type="text" class="form-control" id="accountName" name="name"
                                placeholder="e.g. HDFC, ICIC, SBI" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-1"></i>
                            Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

<%- include('partials/footer') %>